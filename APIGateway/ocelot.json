{
  "Routes": [
    {
      "UpstreamPathTemplate": "/ecommerce/Orders",
      "DownstreamPathTemplate": "/api/Orders",
      "DownstreamHostAndPorts": [
        {
          "Host": "ordermicroservice.api",
          "Port": 8080
        }
      ],
      "UpstreamHttpMethod": [ "Get", "Post", "Option" ],
      "UpstreamScheme": "http",
      "FileCacheOptions": {
        "TtlSeconds": 30,
        "Region": "orders"
      }
    },


    {
      "UpstreamPathTemplate": "/ecommerce/Orders/search/orderid/{orderID}",
      "DownstreamPathTemplate": "/api/Orders/search/orderid/{orderID}",
